
@model Webshop.Models.Order
@{
    ViewBag.Title = "Address And Payment";
}

<section class="container">
        <div class="col-xs-12 pad-top content-box">
            <div class="col-md-12">
                @await Component.InvokeAsync("CheckOutCart")
            </div>
            <div class="col-md-12">
                <form asp-antiforgery="true">
                    <h2 class="orange">Address And Payment</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-horizontal">
                        <h4>Order</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-4">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="FirstName" class="form-control" />
                                        <span asp-validation-for="FirstName" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="LastName" class="form-control" />
                                        <span asp-validation-for="LastName" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="Address" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="City" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="City" class="form-control" />
                                        <span asp-validation-for="City" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Country" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="Country" class="form-control" />
                                        <span asp-validation-for="Country" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Email" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrderDate" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="OrderDate" class="form-control" />
                                        <span asp-validation-for="OrderDate" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="Phone" class="form-control" />
                                        <span asp-validation-for="Phone" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PostalCode" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="PostalCode" class="form-control" />
                                        <span asp-validation-for="PostalCode" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="State" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="State" class="form-control" />
                                        <span asp-validation-for="State" class="text-danger" />
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Total" class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <input asp-for="Total" class="form-control" />
                                        <span asp-validation-for="Total" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Username" class="col-md-8 control-label"></label>
                                    <div class="col-md-4">
                                        <input asp-for="Username" class="form-control" />
                                        <span asp-validation-for="Username" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                                <div class="editor-field">
                                    @Html.TextBox("PromoCode")
                                </div>
                                <div>
                                    <a asp-action="Index">Back to List</a>
                                    <input type="submit" value="Submit Order" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
