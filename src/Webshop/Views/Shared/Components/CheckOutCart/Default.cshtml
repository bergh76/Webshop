@if (Model._cartItems != null)
{
    <div class="col-md-12">
        <table id="noTranslationTabel" class="table table-striped table-font dt-responsive dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
            <thead>
                <tr>
                    <th style="width:100px">@Localizer["Article"]</th>
                    <th style="width:20px">@Localizer["Amount"]</th>
                    <th style="width:70px">@Localizer["Price"]</th>
                    <th style="width:70px">@Localizer["RowTotal"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model._cartItems)
                {
                    <tr id="row-@item.CartItemId">

                        <td style="width:100px" ><a asp-controller="Home" asp-action="Details" asp-route-id="@item.ArticleId">@item.ArticleName</a></td>

                        <td style="width:20px" id="item-count-@item.CartItemId">@item.Count</td>

                        <td style="width:70px">@item.Article.ArticlePrice</td>

                        <td style="width:70px">
                            @{var price = item.Article.ArticlePrice;
                                var i = item.Count;
                                var sum = Convert.ToDecimal(Math.Round(price * i, 2));}
                            @sum
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
        <div class="col-md-12">
            <div class="col-md-9"></div>
            <div class="col-md-12 bg-success pull-left">
                   <h4>@Localizer["CartTotal"] @Model._sum</h4>
            </div>
        </div>
    </div>
 }
