                            </a>
                            <ul class="dropdown-menu keep-open">
                                <li data-bind="css: inProgressClass" class="hide"></li>
                                <li class="productList-small container" data-bind="template: { name: 'miniCartItem-template', foreach: Items }"></li>
                                <li class="col-xs-12 text-center padding-x-off">
                                    <a class="btn btn-block btn-branded toCheckout" href="/shoppingcart">
                                       @*await Component.InvokeAsync("Cart")*@
