                <!-- SHOPINGCART-->
                <script type="text/html" id="miniCartItem-template">
                    <div class="itemRow row">
                        <div class="col-xs-2">
                            <a data-bind="visible: !RemoveOnly(), attr: { href: Product.ProductUrl, title: Product.DisplayName }">
                                <img data-bind="attr: { 'src': Product.SmallImageUrl, alt: Product.DisplayName }" alt="" />
                            </a>
                            <img data-bind="visible: RemoveOnly, attr: { 'src': Product.SmallImageUrl, alt: Product.DisplayName }" alt="" />
                        </div>
                        <div class="col-xs-6">
                            <a data-bind="visible: !RemoveOnly(), attr: { href: Product.ProductUrl, title: Product.DisplayName }">
                                <span class="text-muted" data-bind="text: Product.Manufacturer"></span> <strong data-bind="text: Product.DisplayName"></strong> <span class="text-muted" data-bind="text: Product.Specification"></span>
                            </a>
                            <div data-bind="visible: RemoveOnly"><span class="text-muted" data-bind="text: Product.Manufacturer"></span> <strong data-bind="text: Product.DisplayName"></strong> <span class="text-muted" data-bind="text: Product.Specification"></span></div>
                        </div>
                        <div class="col-xs-2 text-center nowrap-simple">
                            <!-- ko if: Product.AvailableForSale() && !RemoveOnly() -->
                            <a href="#" class="btn btn-xs" data-bind="click: $parent.removeOne, attr: { title: DisplayMinQuantity() }" data-quantity-modifier="true">&minus;</a>
                            <span data-bind="text: Quantity"></span>
                            <a href="#" class="btn btn-xs" data-bind="click: $parent.addOne, attr: { title: DisplayMaxQuantity() }" data-quantity-modifier="true">+</a>
                            <!-- /ko -->
                            <!-- ko if: !Product.AvailableForSale() || RemoveOnly() -->
                            <a href="#" class="btn btn-xs" data-bind="click: $parent.removeAll">Ta bort</a>
                            <!-- /ko -->
                        </div>
                        <div class="col-xs-2 text-right nowrap" data-bind="text: RowPrice, highlight: RowPrice, css: { 'text-muted': !Product.AvailableForSale() }"></div>
                    </div>
                    <div class="hidden accessories row" data-bind="visible: Product.AvailableForSale() && Accessories().length > 0, css: { hidden: false }, template: { name: 'miniCartAccessory-template', foreach: Accessories }"></div>
                    <div class="hidden accessories row" data-bind="visible: !Product.AvailableForSale(), css: { hidden: false }">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-10"><strong data-bind="text: Product.LifeCycleStateMessage"></strong></div>
                    </div>
                </script>

                <script type="text/html" id="miniCartAccessory-template">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-6">
                        <a data-bind="attr: { href: ProductUrl, title: DisplayName }">
                            <span class="text-muted" data-bind="text: Manufacturer"></span> <strong data-bind="text: DisplayName"></strong>
                        </a>
                    </div>
                    <div class="col-xs-2 text-center" data-bind="text: Quantity"></div>
                    <div class="col-xs-2 text-right" data-bind="text: RowPrice"></div>
                </script>

                <script type="text/javascript">
                    $(function () {
                        miniCartViewModel = new MiniCartViewModel({ "Id": 0, "Items": [], "TotalValue": "0 kr", "TotalQuantity": 0, "ShowPricesInclOrExclVat": "Inkl. moms" }, '/shoppingcart/setquantity', '/shoppingcart/remove', '/shoppingcart/getminicartmodel');
                        ko.applyBindings(miniCartViewModel, document.getElementById("ko-miniCartContainer"));
                    });
                </script>
