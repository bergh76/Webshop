                <div id="miniCart">
                    <ul class="nav-white navbar-nav pull-right" id="ko-miniCartContainer">
                        <li class="dropdown pull-right cart" data-bind="dropdown: TotalQuantity()">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" href="/shoppingcart" data-bind="click: loadCartItems">
