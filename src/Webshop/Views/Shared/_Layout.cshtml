</head>

<body>

    <!--await Html.PartialAsync("_LoginPartial")-->
    <section class="nav-white navbar-fixed-top end-border">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Superprodukter</a>
            </div>


            <div class="navbar-collapse collapse">
                <ul class="nav-white navbar-nav">
                    <li class="">
                        <a asp-area="" asp-controller="" asp-action="" class="navbar-brand">Ipsum</a>
                    </li>
                    <li class="">
                        <a asp-area="" asp-controller="Article" asp-action="Index" class="navbar-brand">@Localizer["Produkter"]</a>
                    </li>
                    <li class="">
                        <a asp-area="" asp-controller="Article" asp-action="Create" class="navbar-brand">@Localizer["Skapa Ny"]</a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" href="/login">
                            <span>@Localizer["Mina Sidor"]</span>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="disabled">
                                <span class="icon-padding-right-15"></span><button type="submit" class="logout-button">
                                    @*<a asp-area="" asp-controller="Account" asp-action="Login">*@<span class="fa fa-sign-in icon-padding-right"></span>@Localizer["Logga in"]
                                    @*</a>*@
                                </button>
                            </li>

                            <li class="divider"></li>
                            <li>
                                <span class="icon-padding-right-15"></span><button type="submit" class="logout-button"><span class="fa fa-history icon-padding-right"></span>@Localizer["Orderhistorik"]</button>
                            </li>
                            <li>
                                <span class="icon-padding-right-15"></span><button type="submit" class="logout-button"><span class="fa fa-chain-broken icon-padding-right"></span>@Localizer["Ärenden & reklamationer"]</button>
                            </li>
                            <li class="divider"></li>
                            <li><span class="icon-padding-right-15"></span><button type="submit" class="logout-button"><span class="fa fa-cogs icon-padding-right"></span>@Localizer["Kontoinställningar"]</button></li>
                            <li>
                                <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
                                    <span class="icon-padding-right-15"></span><button type="submit" class="logout-button"><span class="fa fa-sign-out icon-padding-right" type="submit" id="logoutForm"></span>@Localizer["Logga Ut"]</button>
                                </form>
                            </li>
                            <li class="divider"></li>
                        </ul>
                    </li>
                    <li >@await Html.PartialAsync("_SelectLanguagePartial")</li>


                </ul>
                <div id="miniCart">
                    <ul class="nav-white navbar-nav pull-right" id="ko-miniCartContainer">
                        <li class="dropdown pull-right cart" data-bind="dropdown: TotalQuantity()">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" href="/shoppingcart">
                                @if(ViewBag.Sum == 0)
                                {
                                    <label class="hidden-xs hidden-sm">@Localizer["Kundvagnen är tom"]</label>
                                }
                                else
                                {
                                    <label class="cartValue">@Localizer["Summa"]</label><span class="lowerText">@ViewBag.Sum @Localizer["Inkl. moms"]</span>
                                }
                            </a>
                            <ul class="dropdown-menu keep-open">
                                <li data-bind="css: inProgressClass" class="hide"></li>
                                <li class="productList-small container"></li>
                                <li class="col-xs-12 text-center padding-x-off">
                                    @await Component.InvokeAsync("CartSummary")
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- SHOPINGCART-->
                <script type="text/html" id="miniCartItem-template">
                    <div class="itemRow row">
                        <div class="col-xs-2">
                            <a data-bind="visible: !RemoveOnly(), attr: { href: Product.ProductUrl, title: Product.DisplayName }">
                                <img data-bind="attr: { 'src': Product.SmallImageUrl, alt: Product.DisplayName }" alt="" />
                            </a>
                            <img data-bind="visible: RemoveOnly, attr: { 'src': Product.SmallImageUrl, alt: Product.DisplayName }" alt="" />
                        </div>
                        <div class="col-xs-6">
                            <a data-bind="visible: !RemoveOnly(), attr: { href: Product.ProductUrl, title: Product.DisplayName }">
                                <span class="text-muted" data-bind="text: Product.Manufacturer"></span> <strong data-bind="text: Product.DisplayName"></strong> <span class="text-muted" data-bind="text: Product.Specification"></span>
                            </a>
                            <div data-bind="visible: RemoveOnly"><span class="text-muted" data-bind="text: Product.Manufacturer"></span> <strong data-bind="text: Product.DisplayName"></strong> <span class="text-muted" data-bind="text: Product.Specification"></span></div>
                        </div>
                        <div class="col-xs-2 text-center nowrap-simple">
                            <!-- ko if: Product.AvailableForSale() && !RemoveOnly() -->
                            <a href="#" class="btn btn-xs" data-bind="click: $parent.removeOne, attr: { title: DisplayMinQuantity() }" data-quantity-modifier="true">&minus;</a>
                            <span data-bind="text: Quantity"></span>
                            <a href="#" class="btn btn-xs" data-bind="click: $parent.addOne, attr: { title: DisplayMaxQuantity() }" data-quantity-modifier="true">+</a>
                            <!-- /ko -->
                            <!-- ko if: !Product.AvailableForSale() || RemoveOnly() -->
                            <a href="#" class="btn btn-xs" data-bind="click: $parent.removeAll">Ta bort</a>
                            <!-- /ko -->
                        </div>
                        <div class="col-xs-2 text-right nowrap" data-bind="text: RowPrice, highlight: RowPrice, css: { 'text-muted': !Product.AvailableForSale() }"></div>
                    </div>
                    <div class="hidden accessories row" data-bind="visible: Product.AvailableForSale() && Accessories().length > 0, css: { hidden: false }, template: { name: 'miniCartAccessory-template', foreach: Accessories }"></div>
                    <div class="hidden accessories row" data-bind="visible: !Product.AvailableForSale(), css: { hidden: false }">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-10"><strong data-bind="text: Product.LifeCycleStateMessage"></strong></div>
                    </div>
                </script>

                <script type="text/html" id="miniCartAccessory-template">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-6">
                        <a data-bind="attr: { href: ProductUrl, title: DisplayName }">
                            <span class="text-muted" data-bind="text: Manufacturer"></span> <strong data-bind="text: DisplayName"></strong>
                        </a>
                    </div>
                    <div class="col-xs-2 text-center" data-bind="text: Quantity"></div>
                    <div class="col-xs-2 text-right" data-bind="text: RowPrice"></div>
                </script>

                <script type="text/javascript">
                    $(function () {
                        miniCartViewModel = new MiniCartViewModel({ "Id": 0, "Items": [], "TotalValue": "0 kr", "TotalQuantity": 0, "ShowPricesInclOrExclVat": "Inkl. moms" }, '/shoppingcart/setquantity', '/shoppingcart/remove', '/shoppingcart/getminicartmodel');
                        ko.applyBindings(miniCartViewModel, document.getElementById("ko-miniCartContainer"));
                    });
                </script>
                <!-- SHOPINGCART END-->
            </div>
        </div>
    </section>



    <!--INFOBANNER START -->

    <!--INFOBANNER END -->

