@model Webshop.Models.SubCategoryModel
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "NewSubCategory";
}


    <form asp-action="NewSubCategory">
        @Html.HiddenFor(m => m.ID)
        <div class="form-horizontal">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SubCategoryName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="SubCategoryName" class="form-control" />
                        <span asp-validation-for="SubCategoryName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input asp-for="ISActive" />
                            <label asp-for="ISActive"></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value=@Localizer["Spara"] class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
