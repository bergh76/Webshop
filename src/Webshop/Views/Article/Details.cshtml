@model Webshop.Models.Articles
@using Microsoft.AspNetCore.Mvc.Localization
@* The IViewLocalizer can be injected into the view. It does two things of interest:
    1. It can HTML encode *parameters* passed to resource strings (not the resource strings themselves, as they may contain
       HTML) automatically, and return the result as an IHtmlContent so Razor won't HTML encode it again;
    2. It looks for localization resources for this view based on the view path, e.g. if the view's path is
       "MyApplication/Views/Home/Index.cshtml", then the corresponding resource base path will be "MyApplication.Views.Home.Index" *@
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Details"];
}
<section class="container">
    <div class="container-white" data-gasource="CampaignProducts">
        <div class="row">
            <div class="col-xs-12">
                @*<div>@await Component.InvokeAsync("BreadCrumTracker") @await Component.InvokeAsync(nameof(BreadCrumTracker)</div>*@
            </div>
        </div>
        <div class="col-xs-12 padding-x-off">
            <div class="productItemDetailBox hover-show-trigger">
                <div class="col-xs-4 pull-right">
                    <div class="priceInfo super">
                        <span class="priceHeader">
                            <span class="symbol pull-left icon-superpris"></span>
                            <span class="description">-29%</span>
                        </span>
                        <span class="price animated rubberBand">@Html.DisplayFor(model => model.ArticlePrice)</span>
                        <span class="small right">Ord. pris 8 490 kr</span>
                    </div>
                </div>

                <div class="col-xs-4 padding-x-off">
                    <div class="productDetailImageWrap">
                        <a href="#" class="clear">
                            <img class="img-responsive" alt="@Html.DisplayFor(model => model.ArticleName)" src="~/@Html.UrlEncoder.Encode(Model.ArticleImgPath)" />
                        </a>
                    </div>
                </div>

                <div class="productDetailDescription">
                    <div>
                        <h3 class="margin-x-md">@Html.DisplayFor(model => model.ArticleName)</h3>
                    </div>
                    <span class="description">@Html.DisplayFor(model => model.ArticleShortText)</span>
                    <ul class="list-group shortSpec">
                        <li>@Html.DisplayFor(model => model.ArticleNumber)</li>
                        <li>@Html.DisplayFor(model => model.ArticleFeaturesOne)</li>
                        <li>@Html.DisplayFor(model => model.ArticleFeaturesTwo) </li>
                        <li>@Html.DisplayFor(model => model.ArticleFeaturesThree)</li>
                        <li>@Html.DisplayFor(model => model.ArticleFeaturesFour)</li>
                    </ul>
                    <div class="btn-group">
                        <span class="fa fa-cubes green icon-padding-right" title="" data-placement="top" data-container="body" data-toggle="tooltip" data-original-title="Skickas omgående"><span class="small text-muted icon-padding-right"> +@Html.DisplayFor(model => model.ArticleStock) @Localizer["Kvar"]</span></span>
                    </div>
                </div>
                <div style="height: 30px;">
                    <div class="action-row">
                    </div>
                    <div class="col-xs-2 pull-right text-field-margin-right">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button class="btn submit-button" type="button"><i class="fa fa-cart-plus"></i>@Localizer["Köp"]</button>
                            </span>
                            <input type="number" class="form-control" />

                        </div><!-- /input-group -->
                    </div><!-- /.col-lg-6 -->
                </div>
                <div class="text-muted">
                    <a class="btn btn-success" onclick="history.go(-1);" ><span class="modal-pointer">@Localizer["Bakåt"]</span></a>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
