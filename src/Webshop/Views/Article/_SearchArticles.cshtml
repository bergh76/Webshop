@model IEnumerable<Webshop.Models.ArticleModel>
@{
    ViewData["Title"] = "Search";
}
<div class="search-bar">
    <form method="get" asp-action="Index" asp-controller="Article">
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Tillverkare</span>*@
                <div class="col-searchnav">
                    @Html.DropDownList("dropdownVendor", (SelectList)ViewBag.dropdownVendor, "-Välj en Tillverkare-", new { @class = "btn btn-default btn-xs  dropdown-toggle", data_toggle = "dropdown" })
                </div>
            </div>

            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Kategori</span>*@
                <div class="col-searchnav">
                    @Html.DropDownList("dropdownCategory", (SelectList)ViewBag.dropdownCategory, "-Välj Produktområde-", new { @class = "btn btn-default btn-xs dropdown-toggle", data_toggle = "dropdown" })
                </div>
            </div>

            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Produkt</span>*@
                <div class="col-searchnav">
                    @Html.DropDownList("dropdownProduct", (SelectList)ViewBag.dropdownProduct, "-Välj Produkt-", new { @class = "btn btn-default btn-xs dropdown-toggle", data_toggle = "dropdown" })
                </div>
            </div>

            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Produkt</span>*@
                <div class="col-searchnav">
                    @Html.DropDownList("dropdownSubCategory", (SelectList)ViewBag.dropdownSubCategory, "-Välj Produkttyp-", new { @class = "btn btn-default btn-xs dropdown-toggle", data_toggle = "dropdown" })
                </div>
            </div>
            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Produkt</span>*@
                <div class="col-searchnav">
                    <input type="submit" value="Sök" class="btn submit-sm-button" />
                </div>
            </div>
        </div>
    </form>
</div>


        @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


