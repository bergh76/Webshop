@model Webshop.ViewModels.ArticlesViewModel
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Search";
}
<div class="search-bar form-horizontal">
    @*<div class="col-md-12">*@
    <form method="get" asp-action="Index" asp-controller="Home">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-2">
            <div class="form-group">
                <div class="col-md-12">
                    <select asp-for="VendorID" class="form-control" asp-items="ViewBag.VendorID">@Localizer["VendorPlaceholder"]</select>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="btn-block">
                        <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID">@Localizer["Placeholder"]</select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="btn-block">
                        <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID">@Localizer["ProductPlaceholder"]</select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="btn-block">
                        <select asp-for="SubCategoryID" class="form-control" asp-items="ViewBag.SubCategoryID">@Localizer["SubCategoryPlaceholder"]</select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <div class="col-md-12">
                    <div class="btn-block">
                        <button type="submit" class="btn search-sm-button">
                            <span class="ladda-label"><i class="fa fa-search"></i>@Localizer["Search"]</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


        @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


