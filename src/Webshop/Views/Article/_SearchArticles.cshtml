@model IEnumerable<Webshop.Models.Articles>
@using Microsoft.AspNetCore.Mvc.Localization
@* The IViewLocalizer can be injected into the view. It does two things of interest:
    1. It can HTML encode *parameters* passed to resource strings (not the resource strings themselves, as they may contain
       HTML) automatically, and return the result as an IHtmlContent so Razor won't HTML encode it again;
    2. It looks for localization resources for this view based on the view path, e.g. if the view's path is
       "MyApplication/Views/Home/Index.cshtml", then the corresponding resource base path will be "MyApplication.Views.Home.Index" *@
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Search";
}
<div class="search-bar">
    <form method="get" asp-action="Index" asp-controller="Article">
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Tillverkare</span>*@
                <div class="col-searchnav">
                    @Html.DropDownList("dropdownVendor", (SelectList)ViewBag.dropdownVendor, new { @class = "btn btn-default btn-xs  dropdown-toggle", data_toggle = "dropdown"})
                </div>
            </div>

            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Kategori</span>*@
                <div class="col-searchnav">
                    @Html.DropDownList("dropdownCategory", (SelectList)ViewBag.dropdownCategory, new { @class = "btn btn-default btn-xs dropdown-toggle", data_toggle = "dropdown"})
                </div>
            </div>

            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Produkt</span>*@
                <div class="col-searchnav">
                    @Html.DropDownList("dropdownProduct", (SelectList)ViewBag.dropdownProduct, new { @class = "btn btn-default btn-xs dropdown-toggle", data_toggle = "dropdown"})
                </div>
            </div>

            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Produkt</span>*@
                <div class="col-searchnav">
                    @Html.DropDownList("dropdownSubCategory", (SelectList)ViewBag.dropdownSubCategory, new { @class = "btn btn-default btn-xs dropdown-toggle", data_toggle = "dropdown" })
                </div>
            </div>
            <div class="btn-block">
                @*<span class="col-searchnav control-label"> Produkt</span>*@
                <div class="col-searchnav">
                    <input type="submit" value=@Localizer["Sök"] class="btn search-sm-button" />
                </div>
            </div>
        </div>
    </form>
</div>


        @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


