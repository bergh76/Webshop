@model Webshop.ViewModels.ArticlesViewModel
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Translate";
}
@{ var s = Model.ArticleName.ToString();
    if (string.IsNullOrEmpty(s))
    {
        <tr>
            <td>
                <div class="image-container text-center bg-white"> <img src="~/images/no-record-found.png" /></div>@*<h3 id="fof">@ViewBag.NoHit</h3>*@
            </td>
        </tr>
    }
    else
    {
        <section class="container">
            <form asp-action="Translate" asp-controller="Article">
                <div class="col-xs-12 content-box pad-top">

                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <input type="hidden" asp-for="@Model.ArticleId" />
                    <input type="hidden" asp-for="@Model.ArticleGuid" />
                    <input type="hidden" asp-for="@Model.ArticleNumber" />
                    <input type="hidden" asp-for="@Model.ArticleImgPath" />
                    <input type="hidden" asp-for="@Model.ImageId" />
                    <input type="hidden" asp-for="@Model.LangCode" />

                    <div class="col-md-4 pull-left">
                        <div class="col-md-12">
                            <div class="image-container">
                                <img class="img-responsive" alt="@Model.ArticleName" src="~/@Model.ArticleImgPath" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8 padding-x-off">
                        <div class="col-md-5">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label asp-for="@Model.ArticleName" class="col-md-10 control-label"></label>
                                    <span class="flag-icon flag-icon-se"></span><input asp-for="@Model.ArticleName" class="form-control success" placeholder=@Html.DisplayNameFor(x => x.ArticleName) readonly />
                                    <span class="flag-icon flag-icon-gb"></span><input asp-for="@Model.ArticleName" class="form-control" />
                                    <span asp-validation-for="@Model.ArticleName" class="text-danger" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 pad-top">
                                    <label asp-for="@Model.ArticleShortText" class="col-md-10 control-label"></label>
                                    <span class="flag-icon flag-icon-se"></span><input asp-for="@Model.ArticleShortText" class="form-control success" placeholder=@Html.DisplayNameFor(x => x.ArticleShortText) readonly />
                                    <span class="flag-icon flag-icon-gb"></span><input asp-for="@Model.ArticleShortText" class="form-control" />
                                    <span asp-validation-for="@Model.ArticleShortText" class="text-danger" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label asp-for="@Model.ArticleFeaturesOne" class="col-md-10 control-label"></label>
                                    <span class="flag-icon flag-icon-se"></span><input asp-for="@Model.ArticleFeaturesOne" class="form-control success" placeholder=@Html.DisplayNameFor(x => x.ArticleFeaturesOne) readonly />
                                    <span class="flag-icon flag-icon-gb"></span><input asp-for="@Model.ArticleFeaturesOne" class="form-control" />
                                    <span asp-validation-for="@Model.ArticleFeaturesOne" class="text-danger" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 pad-top">
                                    <label asp-for="@Model.ArticleFeaturesTwo" class="col-md-10 control-label"></label>
                                    <span class="flag-icon flag-icon-se"></span><input asp-for="@Model.ArticleFeaturesTwo" class="form-control alert-success" placeholder=@Html.DisplayNameFor(x => x.ArticleFeaturesTwo) readonly />
                                    <span class="flag-icon flag-icon-gb"></span><input asp-for="@Model.ArticleFeaturesTwo" class="form-control" />
                                    <span asp-validation-for="@Model.ArticleFeaturesTwo" class="text-danger" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label asp-for="@Model.ArticleFeaturesThree" class="col-md-10 control-label"></label>
                                    <span class="flag-icon flag-icon-se"></span><input asp-for="@Model.ArticleFeaturesThree" class="form-control" placeholder=@Html.DisplayNameFor(x => x.ArticleFeaturesThree) readonly />
                                    <span class="flag-icon flag-icon-gb"></span><input asp-for="@Model.ArticleFeaturesThree" class="form-control" />

                                    <span asp-validation-for="@Model.ArticleFeaturesThree" class="text-danger" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 pad-top">
                                    <label asp-for="@Model.ArticleFeaturesFour" class="col-md-10 control-label"></label>
                                    <span class="flag-icon flag-icon-se"></span> <input asp-for="@Model.ArticleFeaturesFour" class="form-control success" placeholder=@Html.DisplayNameFor(x => x.ArticleFeaturesFour) readonly />
                                    <span class="flag-icon flag-icon-gb"></span><input asp-for="@Model.ArticleFeaturesFour" class="form-control" />
                                    <span asp-validation-for="@Model.ArticleFeaturesFour" class="text-danger" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 pad-top margin-bottom">
                        <div>
                            <div class="action-row pull-right">
                                <div class="form-actions no-color ">
                                    <input type="submit" value=@Localizer["Save"] class="btn btn-danger" />
                                    <a class="btn btn-success" asp-action="Index">@Localizer["Back"]</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </section>
    }
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
