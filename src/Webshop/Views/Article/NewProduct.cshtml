@model Webshop.Models.ProductModel

@{
    ViewData["Title"] = "NewProduct";
}

    <form asp-action="NewProduct">
        @Html.HiddenFor(m => m.ID)
        <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="ISActive" />
                        <label asp-for="ISActive"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lägg till" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
