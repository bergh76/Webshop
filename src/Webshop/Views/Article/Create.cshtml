                                <div class="custom-file-upload">
                                    @*<input type="file" id="file" name="myfiles" multiple readonly />*@
                                    <input type="file" name="file" multiple />
                                    @*<input type="submit" value="Upload" />*@
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="VendorID" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="VendorID" class="form-control" asp-items="ViewBag.VendorID"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ProductID" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                            </div>
                        </div>


                        <div class="form-group">
                            <label asp-for="CategoryID" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="SubCategoryID" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="SubCategoryID" class="form-control" asp-items="ViewBag.SubCategoryID"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticleStock" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ArticleStock" class="form-control" />
                                <span asp-validation-for="ArticleStock" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticlePrice" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ArticlePrice" class="form-control" />
                                <span asp-validation-for="ArticlePrice" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticleName" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ArticleName" class="form-control" />
                                <span asp-validation-for="ArticleName" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticleShortText" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ArticleShortText" class="form-control" />
                                <span asp-validation-for="ArticleShortText" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticleFeaturesOne" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ArticleFeaturesOne" class="form-control" />
                                <span asp-validation-for="ArticleFeaturesOne" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticleFeaturesTwo" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ArticleFeaturesTwo" class="form-control" />
                                <span asp-validation-for="ArticleFeaturesTwo" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticleFeaturesThree" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ArticleFeaturesThree" class="form-control" />
                                <span asp-validation-for="ArticleFeaturesThree" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticleFeaturesFour" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ArticleFeaturesFour" class="form-control" />
                                <span asp-validation-for="ArticleFeaturesFour" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    <input asp-for="ISActive" />
                                    <label>Aktiv</label>
                                </div>
                            </div>
                        </div>
                        <div class="alert-warning">@ViewBag.IDExists</div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn submit-button" />
                            </div>
                        </div>
                    </div>
                </form>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


