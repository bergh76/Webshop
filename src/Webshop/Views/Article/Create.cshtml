@model Webshop.Models.ArticleModel

@{
    ViewData["Title"] = "Create";
}

<section class="container">
    <div class="container-white" data-gasource="CampaignProducts">
        <div class="row">
            <div class="col-xs-12">
                <h3><span class="badge badge-blue-big">Lägg till Artikel</span></h3>
            </div>
        </div>
