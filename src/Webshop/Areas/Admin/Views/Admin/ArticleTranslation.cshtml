@model Webshop.ViewModels.ArticlesViewModel
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Edit";
}

<section class="container">
    <form asp-action="Edit" asp-controller="Article" enctype="multipart/form-data">
        <div class="col-xs-12 content-box">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <input type="hidden" asp-for="ArticleId" />
            <input type="hidden" asp-for="ArticleGuid" />
            <input type="hidden" asp-for="ArticleNumber" />
            <input type="hidden" asp-for="ArticleImgPath" />
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="LangCode" />

            <div class="col-md-4 pull-left">
                <div class="custom-file-upload pull-left">
                    <input type="file" name="file" multiple />
                </div>
                <div class="image-container">
                    <img class="img-responsive" alt="@Html.DisplayFor(model => model.ArticleName)" src="~/@Html.UrlEncoder.Encode(Model.ArticleImgPath)" />
                </div>
            </div>

            <div class="col-md-8 padding-x-off">
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="VendorID" class="col-md-10 control-label"></label>
                            <input asp-for="VendorID" class="form-control" asp-items="ViewBag.VendorID" readonly />
                            <a data-toggle="modal" data-target="#NewVendor"><span class="modal-pointer"><i class="fa fa-plus-circle lime-green"></i><label class="modal-pointer no-bold" asp-for="VendorID"></label></span></a>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="CategoryID" class="col-md-10 control-label"></label>
                            <input asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID" readonly />
                            <!-- Button trigger modal -->
                            <a data-toggle="modal" data-target="#NewCategory"><span class="modal-pointer"><i class="fa fa-plus-circle lime-green"></i><label class="modal-pointer no-bold" asp-for="CategoryID"></label></span></a>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ProductID" class="col-md-10 control-label"></label>
                            <input asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID" readonly />
                            <!-- Button trigger modal -->
                            <a data-toggle="modal" data-target="#NewProduct"><span class="modal-pointer"><i class="fa fa-plus-circle lime-green"></i><label class="modal-pointer no-bold" asp-for="ProductID"></label></span></a>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="SubCategoryID" class="col-md-10 control-label"></label>
                            <input asp-for="SubCategoryID" class="form-control" asp-items="ViewBag.SubCategoryID" readonly />
                            <!-- Button trigger modal -->
                            <a data-toggle="modal" data-target="#NewSubCategory"><span class="modal-pointer"><i class="fa fa-plus-circle lime-green"></i><label class="modal-pointer no-bold" asp-for="SubCategoryID"></label></span></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ArticleStock" class="col-md-10 control-label"></label>
                            <input asp-for="ArticleStock" class="form-control" placeholder=@Html.DisplayNameFor(x => x.ArticleStock) readonly />
                            <span asp-validation-for="ArticleStock" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ArticlePrice" class="col-md-10 control-label"></label>
                            <input asp-for="ArticlePrice" class="form-control" placeholder=@Html.DisplayNameFor(x=> x.ArticlePrice) readonly />
                            <span asp-validation-for="ArticlePrice" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ArticleName" class="col-md-10 control-label"></label>
                            <input asp-for="ArticleName" class="form-control" placeholder=@Html.DisplayNameFor(x => x.ArticleName) readonly />
                            <span asp-validation-for="ArticleName" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ArticleShortText" class="col-md-10 control-label"></label>
                            <input asp-for="ArticleShortText" class="form-control" placeholder=@Html.DisplayNameFor(x => x.ArticleShortText) readonly />
                            <span asp-validation-for="ArticleShortText" class="text-danger" />
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ArticleFeaturesOne" class="col-md-10 control-label"></label>
                            <input asp-for="ArticleFeaturesOne" class="form-control" placeholder=@Html.DisplayNameFor(x => x.ArticleFeaturesOne) readonly />
                            <span asp-validation-for="ArticleFeaturesOne" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ArticleFeaturesTwo" class="col-md-10 control-label"></label>
                            <input asp-for="ArticleFeaturesTwo" class="form-control" placeholder=@Html.DisplayNameFor(x => x.ArticleFeaturesTwo) readonly />
                            <span asp-validation-for="ArticleFeaturesTwo" class="text-danger" />
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ArticleFeaturesThree" class="col-md-10 control-label"></label>
                            <input asp-for="ArticleFeaturesThree" class="form-control" placeholder=@Html.DisplayNameFor(x => x.ArticleFeaturesThree) readonly />
                            <span asp-validation-for="ArticleFeaturesThree" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="ArticleFeaturesFour" class="col-md-10 control-label"></label>
                            <input asp-for="ArticleFeaturesFour" class="form-control" placeholder=@Html.DisplayNameFor(x => x.ArticleFeaturesFour) readonly />
                            <span asp-validation-for="ArticleFeaturesFour" class="text-danger" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 ">
                <div class="col-md-9 pull-right">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                <input checked="checked" asp-for="ISActive" />
                                <label asp-for="ISActive"></label>
                            </div>
                            <div class="checkbox">
                                <input asp-for="ISCampaign" />
                                <label asp-for="ISCampaign"></label>
                            </div>
                            <div class="checkbox">
                                <input asp-for="ISTranslated" />
                                <label asp-for="ISTranslated"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div style="height: 30px;">
            <div class="action-row pull-right">
                <div class="form-actions no-color ">
                    <input type="submit" value=@Localizer["Save"] class="btn btn-danger" />
                    <a class="btn btn-success" asp-action="Index">@Localizer["Back"]</a>
                </div>
            </div>
        </div>
    </form>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
